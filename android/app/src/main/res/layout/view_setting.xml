<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="250pt"
        android:layout_height="180pt"
        android:layout_marginTop="40pt"
        android:layout_marginEnd="20pt"
        app:background_normal="@color/color_C2000000"
        app:corner_radius="9pt">

        <TextView
            android:id="@+id/tv_beauty"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:gravity="center"
            android:text="关闭美颜"
            android:textColor="@color/color_FFFFFF"
            android:textSize="35pt"
            app:layout_constraintBottom_toTopOf="@+id/tv_clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:gravity="center"
            android:text="清晰度"
            android:textColor="@color/color_FFFFFF"
            android:textSize="35pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_beauty" />


    </com.ruffian.library.widget.RConstraintLayout>

</LinearLayout>

