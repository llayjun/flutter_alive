<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        app:background_normal="@color/color_FFFFFF">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0pt"
            android:layout_height="115pt"
            android:background="@color/color_F4F4F4"
            android:gravity="center_vertical"
            android:paddingStart="35pt"
            android:text="分销"
            android:textColor="@color/color_333333"
            android:textSize="49pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_middle"
            android:layout_width="0pt"
            android:layout_height="405pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/rt_share_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="25pt"
                android:gravity="center"
                android:text="分享链接"
                android:textColor="@color/color_333333"
                android:textSize="40pt"
                app:icon_direction="top"
                app:icon_height="144pt"
                app:icon_src_normal="@mipmap/ic_live_share"
                app:icon_width="144pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rt_share_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/rt_share_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="25pt"
                android:gravity="center"
                android:text="分享图片"
                android:textColor="@color/color_333333"
                android:textSize="40pt"
                app:icon_direction="top"
                app:icon_height="144pt"
                app:icon_src_normal="@mipmap/ic_live_share_pic"
                app:icon_width="144pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rt_share_link"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0pt"
            android:layout_height="115pt"
            android:background="@color/color_F4F4F4"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="49pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constrain_middle" />

    </com.ruffian.library.widget.RConstraintLayout>

</LinearLayout>
