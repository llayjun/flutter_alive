<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="201pt"
        android:layout_height="wrap_content"
        app:background_normal="@color/color_50000000"
        app:corner_radius="9pt">

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37pt"
            android:text="当前商品"
            android:textColor="@color/color_FFFFFF"
            android:textSize="35pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="37pt"
            android:layout_marginBottom="50pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_current" />

    </com.ruffian.library.widget.RConstraintLayout>

    <com.ruffian.library.widget.RConstraintLayout
        android:id="@+id/rc_close"
        android:layout_width="201pt"
        android:layout_height="72pt"
        android:layout_marginTop="15pt"
        app:background_normal="@color/color_50000000"
        app:corner_radius="9pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭橱窗"
            android:textColor="@color/color_FFFFFF"
            android:textSize="35pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.ruffian.library.widget.RConstraintLayout>

</LinearLayout>